<div class="panel mb25">
  <div class="panel-heading broder">
    <div class="col-sm-7">
      <h1>All Courses</h1>
    </div>
  </div>
  <div class="panel-body">
     <div class="row no-margin">
        <table class="table table-responsive table-hover" id="table_body_unfinished">
          <tr>
            <th>#</th>
            <th>Course Name</th>
            <th>Edit</th>
            <th>Delete</th>
            <th>View Course</th>
          </tr>
          <% @courses.each_with_index do |course, i| %>
            <tr>
              <td><%= i + 1 %></td>
              <td><%= course['name'] %></td>
              <td>
                <%= link_to 'Edit Course',edit_course_path(course['id']), :class => 'btn btn-default' %>
              </td>
              <td>
                <%= link_to "Delete Course", "/courses/#{course['id']}", :method => :delete, :data => {:confirm => 'Are you sure you want to delete this course?'}, :class => 'btn btn-danger' %>
              </td>
              <td>
                <%= link_to 'View Course',course_path(course['id']), :class => 'btn btn-default' %>
              </td>
            </tr>
          <% end %>
        </table>
     </div>
  </div>
</div>